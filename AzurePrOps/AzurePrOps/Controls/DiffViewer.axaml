<UserControl
    x:Class="AzurePrOps.Controls.DiffViewer"
    xmlns="https://github.com/avaloniaui"
    xmlns:avaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
    xmlns:c="using:AzurePrOps.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <!--  Modern unified color palette with better contrast  -->
        <LinearGradientBrush EndPoint="0,1" StartPoint="0,0" x:Key="ToolbarGradient">
            <GradientStop Color="#FFFFFF" Offset="0" />
            <GradientStop Color="#F8F9FA" Offset="1" />
        </LinearGradientBrush>

        <!--  Component-specific brushes  -->

        <!--  Icon colors for better contrast  -->
        <SolidColorBrush Color="#24292F" x:Key="IconBrush" />
        <SolidColorBrush Color="#0969DA" x:Key="IconHoverBrush" />
        <SolidColorBrush Color="#FFFFFF" x:Key="IconSelectedBrush" />
    </UserControl.Resources>

    <UserControl.Styles>
        <!--  Modern button styles with consistent colors and better icon contrast  -->
        <Style Selector="Button.modern">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Duration="0:0:0.15" Property="Opacity" />
                    <BrushTransition Duration="0:0:0.15" Property="Background" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Button.modern:pointerover">
            <Setter Property="Background" Value="{StaticResource HoverBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        </Style>

        <Style Selector="Button.modern:pressed">
            <Setter Property="Background" Value="{StaticResource SelectedBrush}" />
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        </Style>

        <Style Selector="Button.primary">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryHoverBrush}" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style Selector="ToggleButton.toolbar">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="Margin" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Duration="0:0:0.15" Property="Opacity" />
                    <BrushTransition Duration="0:0:0.15" Property="Background" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="ToggleButton.toolbar:pointerover">
            <Setter Property="Background" Value="{StaticResource HoverBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        </Style>

        <Style Selector="ToggleButton.toolbar:checked">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}" />
        </Style>

        <!--  Enhanced PathIcon styles with proper contrast  -->
        <Style Selector="PathIcon">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        </Style>

        <Style Selector="ToggleButton.toolbar PathIcon">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        </Style>

        <Style Selector="ToggleButton.toolbar:pointerover PathIcon">
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
        </Style>

        <Style Selector="ToggleButton.toolbar:checked PathIcon">
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style Selector="ToggleButton.toolbar TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        </Style>

        <Style Selector="ToggleButton.toolbar:pointerover TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        </Style>

        <Style Selector="ToggleButton.toolbar:checked TextBlock">
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style Selector="Button.modern PathIcon">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        </Style>

        <Style Selector="Button.modern:pointerover PathIcon">
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
        </Style>

        <Style Selector="Button.modern:pressed PathIcon">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        </Style>

        <Style Selector="Button.modern TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        </Style>

        <Style Selector="Button.modern:pointerover TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        </Style>

        <Style Selector="Button.primary PathIcon">
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style Selector="Button.primary TextBlock">
            <Setter Property="Foreground" Value="White" />
        </Style>

        <!--  Enhanced tooltip styles for better readability  -->
        <Style Selector="ToolTip">
            <Setter Property="Background" Value="#2D3748" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#4A5568" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>

        <Style Selector="ToolTip TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>

        <Style Selector="TextBox.search">
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        </Style>

        <Style Selector="TextBox.search:focus">
            <Setter Property="BorderBrush" Value="{StaticResource FocusBrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        </Style>

        <!--  Enhanced TextEditor styles for proper diff visualization  -->
        <Style Selector="avaloniaEdit|TextEditor">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
            <Setter Property="LineNumbersForeground" Value="{StaticResource TextSecondaryBrush}" />
        </Style>

        <Style Selector="avaloniaEdit|TextEditor:focus">
            <Setter Property="BorderBrush" Value="{StaticResource FocusBrush}" />
        </Style>
    </UserControl.Styles>

    <Border
        Background="{StaticResource SurfaceBrush}"
        BorderBrush="{StaticResource BorderBrush}"
        BorderThickness="1"
        CornerRadius="8">
        <Grid RowDefinitions="Auto,Auto,*,Auto">

            <!--  Enhanced Toolbar  -->
            <Border
                Background="{StaticResource ToolbarGradient}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                CornerRadius="8,8,0,0"
                Grid.Row="0"
                Padding="12,10">
                <Grid ColumnDefinitions="Auto,*,Auto">

                    <!--  Left Section: View Mode & Navigation  -->
                    <StackPanel
                        Grid.Column="0"
                        Orientation="Horizontal"
                        Spacing="12">

                        <!--  View Mode Toggle Group  -->
                        <Border
                            Background="{StaticResource SurfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="2">
                            <StackPanel Orientation="Horizontal" Spacing="1">
                                <ToggleButton
                                    Classes="toolbar"
                                    IsChecked="True"
                                    Margin="0"
                                    Padding="10,6"
                                    ToolTip.Tip="Side-by-Side View"
                                    x:Name="PART_SideBySideButton">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <PathIcon
                                            Data="M0,0 L7,0 L7,14 L0,14 Z M9,0 L16,14 L16,14 L9,14 Z"
                                            Height="14"
                                            Width="16" />
                                        <TextBlock FontSize="12" Text="Split" />
                                    </StackPanel>
                                </ToggleButton>
                                <ToggleButton
                                    Classes="toolbar"
                                    Margin="0"
                                    Padding="10,6"
                                    ToolTip.Tip="Unified View"
                                    x:Name="PART_UnifiedButton">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <PathIcon
                                            Data="M0,0 L16,0 L16,14 L0,14 Z"
                                            Height="14"
                                            Width="16" />
                                        <TextBlock FontSize="12" Text="Unified" />
                                    </StackPanel>
                                </ToggleButton>
                            </StackPanel>
                        </Border>

                        <!--  Navigation Controls  -->
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <Button
                                Classes="modern"
                                Padding="8,6"
                                ToolTip.Tip="Previous Change (Ctrl+Up)"
                                x:Name="PART_PrevChangeButton">
                                <PathIcon
                                    Data="M8,0 L0,6 L8,12 Z"
                                    Height="12"
                                    Width="8" />
                            </Button>
                            <Button
                                Classes="modern"
                                Padding="8,6"
                                ToolTip.Tip="Next Change (Ctrl+Down)"
                                x:Name="PART_NextChangeButton">
                                <PathIcon
                                    Data="M0,0 L8,6 L0,12 Z"
                                    Height="12"
                                    Width="8" />
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!--  Center Section: Search  -->
                    <Grid
                        Grid.Column="1"
                        Margin="20,0"
                        MaxWidth="400"
                        MinWidth="250">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBox
                                Classes="search"
                                FontSize="13"
                                Grid.Column="0"
                                HorizontalAlignment="Stretch"
                                Watermark="Search in diff... (Ctrl+F)"
                                x:Name="PART_SearchBox" />
                            <StackPanel
                                Grid.Column="1"
                                Margin="6,0,0,0"
                                Orientation="Horizontal"
                                Spacing="2">
                                <Button
                                    Classes="modern"
                                    Padding="6,6"
                                    ToolTip.Tip="Previous Match (F3)"
                                    x:Name="PART_PrevSearchButton">
                                    <PathIcon
                                        Data="M8,0 L0,6 L8,12 Z"
                                        Height="10"
                                        Width="6" />
                                </Button>
                                <Button
                                    Classes="modern"
                                    Padding="6,6"
                                    ToolTip.Tip="Next Match (Shift+F3)"
                                    x:Name="PART_NextSearchButton">
                                    <PathIcon
                                        Data="M0,0 L8,6 L0,12 Z"
                                        Height="10"
                                        Width="6" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!--  Right Section: Options & Actions  -->
                    <StackPanel
                        Grid.Column="2"
                        Orientation="Horizontal"
                        Spacing="8">

                        <!--  Diff Options Group  -->
                        <StackPanel Orientation="Horizontal" Spacing="3">
                            <ToggleButton
                                Classes="toolbar"
                                IsChecked="True"
                                Padding="6,6"
                                ToolTip.Tip="Show Only Changes"
                                x:Name="PART_CodeFoldingButton">
                                <PathIcon
                                    Data="M2,4 L14,4 M2,8 L14,8 M2,12 L14,12"
                                    Height="14"
                                    Width="14" />
                            </ToggleButton>
                            <ToggleButton
                                Classes="toolbar"
                                Padding="6,6"
                                ToolTip.Tip="Ignore Whitespace"
                                x:Name="PART_IgnoreWhitespaceButton">
                                <PathIcon
                                    Data="M2,2 L14,14 M14,2 L2,14"
                                    Height="14"
                                    Width="14" />
                            </ToggleButton>
                            <ToggleButton
                                Classes="toolbar"
                                Padding="6,6"
                                ToolTip.Tip="Ignore Line Endings"
                                x:Name="PART_IgnoreNewlinesButton">
                                <PathIcon
                                    Data="M3,3 L13,3 L13,6 L9,6 L9,11 L6,11 L6,6 L3,6 Z M10,9 L14,13 M14,9 L10,13"
                                    Height="14"
                                    Width="14" />
                            </ToggleButton>
                            <ToggleButton
                                Classes="toolbar"
                                Padding="6,6"
                                ToolTip.Tip="Wrap Lines"
                                x:Name="PART_WrapLinesButton">
                                <PathIcon
                                    Data="M2,4 L12,4 M2,8 L12,8 M2,12 L12,12 M12,8 L16,12 L12,16"
                                    Height="14"
                                    Width="14" />
                            </ToggleButton>
                        </StackPanel>

                        <!--  Separator  -->
                        <Border
                            Background="{StaticResource BorderBrush}"
                            Height="20"
                            VerticalAlignment="Center"
                            Width="1" />

                        <!--  Action Buttons Group  -->
                        <StackPanel Orientation="Horizontal" Spacing="3">
                            <Button
                                Classes="modern"
                                Padding="6,6"
                                ToolTip.Tip="Copy Selection (Ctrl+C)"
                                x:Name="PART_CopyButton">
                                <PathIcon
                                    Data="M4,2 L4,4 L2,4 L2,14 L10,14 L10,12 L12,12 L12,2 Z M6,0 L14,0 L14,10 L12,10"
                                    Height="14"
                                    Width="14" />
                            </Button>
                            <Button
                                Classes="modern"
                                Padding="6,6"
                                ToolTip.Tip="Copy Entire Diff (Ctrl+Shift+C)"
                                x:Name="PART_CopyDiffButton">
                                <PathIcon
                                    Data="M2,2 L10,2 L10,12 L2,12 Z M12,4 L14,4 L14,14 L6,14 L6,12"
                                    Height="14"
                                    Width="14" />
                            </Button>
                        </StackPanel>

                        <!--  Primary Action  -->
                        <Button
                            Classes="primary"
                            Padding="10,6"
                            ToolTip.Tip="Open in External Editor (Ctrl+O)"
                            x:Name="PART_OpenInIDEButton">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <PathIcon
                                    Data="M0,0 L14,0 L14,5 L12,5 L12,2 L2,2 L2,12 L5,12 L5,14 L0,14 Z M8,6 L14,0 M10,0 L14,4"
                                    Height="14"
                                    Width="14" />
                                <TextBlock FontSize="12" Text="Open" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Metrics Bar  -->
            <Border
                Background="{StaticResource CardBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Grid.Row="1"
                Padding="16,8">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <StackPanel
                        Grid.Column="0"
                        Orientation="Horizontal"
                        Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <Ellipse
                                Fill="{StaticResource SuccessBrush}"
                                Height="8"
                                VerticalAlignment="Center"
                                Width="8" />
                            <TextBlock
                                FontSize="12"
                                VerticalAlignment="Center"
                                x:Name="PART_AddedLinesText">
                                0 added
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <Ellipse
                                Fill="{StaticResource DangerBrush}"
                                Height="8"
                                VerticalAlignment="Center"
                                Width="8" />
                            <TextBlock
                                FontSize="12"
                                VerticalAlignment="Center"
                                x:Name="PART_RemovedLinesText">
                                0 removed
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <Ellipse
                                Fill="{StaticResource WarningBrush}"
                                Height="8"
                                VerticalAlignment="Center"
                                Width="8" />
                            <TextBlock
                                FontSize="12"
                                VerticalAlignment="Center"
                                x:Name="PART_ModifiedLinesText">
                                0 modified
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        x:Name="PART_MetricsPanel" />

                    <TextBlock
                        FontSize="10"
                        Foreground="{StaticResource MutedBrush}"
                        Grid.Column="2"
                        VerticalAlignment="Center">
                        Diff Viewer - AzurePrOps
                    </TextBlock>
                </Grid>
            </Border>

            <!--  Diff Content  -->
            <Grid
                ColumnDefinitions="*,1,*"
                Grid.Row="2"
                MinHeight="400">
                <!--  Left Pane (Before)  -->
                <Border
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,1,0"
                    Grid.Column="0">
                    <Grid RowDefinitions="Auto,*">
                        <Border
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,0,0,1"
                            Grid.Row="0"
                            Padding="12,8">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Grid.Column="0"
                                    Text="Before"
                                    VerticalAlignment="Center" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{StaticResource MutedBrush}"
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    x:Name="PART_OldFileInfo" />
                            </Grid>
                        </Border>
                        <avaloniaEdit:TextEditor
                            Background="{StaticResource SurfaceBrush}"
                            FontFamily="JetBrains Mono, Consolas, monospace"
                            FontSize="13"
                            Grid.Row="1"
                            HorizontalScrollBarVisibility="Auto"
                            ShowLineNumbers="True"
                            VerticalScrollBarVisibility="Auto"
                            WordWrap="False"
                            x:Name="OldEditor" />
                    </Grid>
                </Border>

                <!--  Splitter  -->
                <Border
                    Background="{StaticResource BorderBrush}"
                    Grid.Column="1"
                    Width="1" />

                <!--  Right Pane (After)  -->
                <Border Background="{StaticResource SurfaceBrush}" Grid.Column="2">
                    <Grid RowDefinitions="Auto,*">
                        <Border
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,0,0,1"
                            Grid.Row="0"
                            Padding="12,8">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Grid.Column="0"
                                    Text="After"
                                    VerticalAlignment="Center" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{StaticResource MutedBrush}"
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    x:Name="PART_NewFileInfo" />
                            </Grid>
                        </Border>
                        <avaloniaEdit:TextEditor
                            Background="{StaticResource SurfaceBrush}"
                            FontFamily="JetBrains Mono, Consolas, monospace"
                            FontSize="13"
                            Grid.Row="1"
                            HorizontalScrollBarVisibility="Auto"
                            ShowLineNumbers="True"
                            VerticalScrollBarVisibility="Auto"
                            WordWrap="False"
                            x:Name="NewEditor" />
                    </Grid>
                </Border>
            </Grid>

            <!--  Status Footer  -->
            <Border
                Background="{StaticResource ToolbarGradient}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                CornerRadius="0,0,8,8"
                Grid.Row="3"
                Padding="16,8">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <StackPanel
                        Grid.Column="0"
                        Orientation="Horizontal"
                        Spacing="8">
                        <TextBlock
                            FontSize="11"
                            Foreground="{StaticResource MutedBrush}"
                            x:Name="PART_StatusText">
                            Ready
                        </TextBlock>
                    </StackPanel>

                    <StackPanel
                        Grid.Column="2"
                        Orientation="Horizontal"
                        Spacing="8">
                        <TextBlock
                            FontSize="11"
                            Foreground="{StaticResource MutedBrush}"
                            x:Name="PART_PositionText" />
                        <TextBlock
                            FontSize="11"
                            Foreground="{StaticResource MutedBrush}"
                            x:Name="PART_SelectionText" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>