<UserControl
    Height="600"
    HorizontalAlignment="Stretch"
    MinHeight="400"
    VerticalAlignment="Top"
    x:Class="AzurePrOps.Controls.DiffViewer"
    xmlns="https://github.com/avaloniaui"
    xmlns:avaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
    xmlns:c="using:AzurePrOps.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Styles>
        <Style Selector="ToggleButton.viewModeButton">
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>
    </UserControl.Styles>
    <Grid
        ColumnDefinitions="*,5,*,Auto"
        MinHeight="400"
        RowDefinitions="Auto,*,Auto,Auto">
        <!--  Toolbar  -->
        <Grid
            ColumnDefinitions="Auto,*,Auto"
            Grid.ColumnSpan="4"
            Grid.Row="0"
            Margin="0,0,0,4">
            <StackPanel
                Grid.Column="0"
                Orientation="Horizontal"
                Spacing="4">
                <ToggleButton
                    Classes="viewModeButton"
                    IsChecked="True"
                    ToolTip.Tip="Side-by-Side View"
                    x:Name="PART_SideBySideButton">
                    <PathIcon
                        Data="M0,0 L8,0 L8,16 L0,16 Z M10,0 L18,0 L18,16 L10,16 Z"
                        Height="16"
                        Width="18" />
                </ToggleButton>
                <ToggleButton
                    Classes="viewModeButton"
                    ToolTip.Tip="Unified View"
                    x:Name="PART_UnifiedButton">
                    <PathIcon
                        Data="M0,0 L18,0 L18,16 L0,16 Z"
                        Height="16"
                        Width="18" />
                </ToggleButton>
                <Separator
                    Classes="vertical"
                    Height="24"
                    Margin="4,0" />
                <Button
                    Height="32"
                    ToolTip.Tip="Next Change"
                    Width="32"
                    x:Name="PART_NextChangeButton">
                    <PathIcon
                        Data="M0,0 L10,8 L0,16 Z"
                        Height="16"
                        Width="10" />
                </Button>
                <Button
                    Height="32"
                    ToolTip.Tip="Previous Change"
                    Width="32"
                    x:Name="PART_PrevChangeButton">
                    <PathIcon
                        Data="M10,0 L0,8 L10,16 Z"
                        Height="16"
                        Width="10" />
                </Button>
            </StackPanel>

            <!--  Search  -->
            <TextBox
                Grid.Column="1"
                Margin="8,0"
                Watermark="Search..."
                x:Name="PART_SearchBox" />

            <StackPanel
                Grid.Column="2"
                Orientation="Horizontal"
                Spacing="4">
                <Button
                    Height="32"
                    ToolTip.Tip="Previous Match"
                    Width="32"
                    x:Name="PART_PrevSearchButton">
                    <PathIcon Data="M10,0 L0,8 L10,16 Z" Height="16" Width="10" />
                </Button>
                <Button
                    Height="32"
                    ToolTip.Tip="Next Match"
                    Width="32"
                    x:Name="PART_NextSearchButton">
                    <PathIcon Data="M0,0 L10,8 L0,16 Z" Height="16" Width="10" />
                </Button>
                <Button
                    Height="32"
                    ToolTip.Tip="Open in IDE"
                    Width="32"
                    x:Name="PART_OpenInIDEButton">
                    <PathIcon Data="M0,0 L16,0 L16,6 L14,6 L14,2 L2,2 L2,14 L6,14 L6,16 L0,16 Z M9,7 L16,0 M12,0 L16,4" Height="16" Width="16" />
                </Button>
                <Button
                    Height="32"
                    ToolTip.Tip="Copy Selected Text"
                    Width="32"
                    x:Name="PART_CopyButton">
                    <PathIcon
                        Data="M2,2 L12,2 L12,14 L2,14 Z M4,0 L14,0 L14,12 L16,12 L16,16 L6,16 L6,14 L4,14 Z"
                        Height="16"
                        Width="16" />
                </Button>
                <ToggleButton
                    Classes="viewModeButton"
                    Height="32"
                    IsChecked="True"
                    ToolTip.Tip="Show Only Changes"
                    Width="32"
                    x:Name="PART_CodeFoldingButton">
                    <PathIcon
                        Data="M0,0 L16,0 L16,4 L0,4 Z M0,6 L16,6 L16,10 L0,10 Z M0,12 L16,12 L16,16 L0,16 Z"
                        Height="16"
                        Width="16" />
                </ToggleButton>
                <ToggleButton
                    Classes="viewModeButton"
                    ToolTip.Tip="Ignore Whitespace"
                    x:Name="PART_IgnoreWhitespaceButton">
                    <PathIcon Data="M0,0 L16,0 L16,16 L0,16 Z M4,4 L12,12 M12,4 L4,12" Height="16" Width="16" />
                </ToggleButton>
                <ToggleButton
                    Classes="viewModeButton"
                    ToolTip.Tip="Wrap Lines"
                    x:Name="PART_WrapLinesButton">
                    <PathIcon Data="M0,4 L12,4 M0,8 L12,8 M0,12 L12,12 M12,8 L16,12 L12,16" Height="16" Width="16" />
                </ToggleButton>
                <Button
                    Height="32"
                    ToolTip.Tip="Copy Diff"
                    Width="32"
                    x:Name="PART_CopyDiffButton">
                    <PathIcon Data="M2,2 L12,2 L12,14 L2,14 Z M14,4 L16,4 L16,16 L6,16 L6,14" Height="16" Width="16" />
                </Button>
            </StackPanel>
        </Grid>
        <!--  Metrics  -->
        <StackPanel
            Grid.ColumnSpan="4"
            Grid.Row="1"
            Margin="0,0,0,4"
            Orientation="Horizontal"
            x:Name="PART_MetricsPanel" />
        <!--  Side-by-side Diff  -->
        <Border
            BorderBrush="#FFDDDDDD"
            BorderThickness="1"
            CornerRadius="4"
            Grid.Column="0"
            Grid.Row="2">
            <Grid RowDefinitions="Auto,*">
                <Border
                    Background="#FFF0F0F0"
                    BorderBrush="#FFDDDDDD"
                    BorderThickness="0,0,0,1"
                    Padding="8,4">
                    <TextBlock FontWeight="SemiBold" Text="Before" />
                </Border>
                <avaloniaEdit:TextEditor
                    FontFamily="Consolas"
                    Grid.Row="1"
                    Height="400"
                    HorizontalScrollBarVisibility="Auto"
                    MinHeight="400"
                    VerticalAlignment="Stretch"
                    VerticalScrollBarVisibility="Visible"
                    x:Name="OldEditor" />
            </Grid>
        </Border>

        <GridSplitter
            Background="#FFCCCCCC"
            Grid.Column="1"
            Grid.Row="2"
            ResizeDirection="Columns"
            Width="5" />

        <Border
            BorderBrush="#FFDDDDDD"
            BorderThickness="1"
            CornerRadius="4"
            Grid.Column="2"
            Grid.Row="2">
            <Grid RowDefinitions="Auto,*">
                <Border
                    Background="#FFF0F0F0"
                    BorderBrush="#FFDDDDDD"
                    BorderThickness="0,0,0,1"
                    Padding="8,4">
                    <TextBlock FontWeight="SemiBold" Text="After" />
                </Border>
                <avaloniaEdit:TextEditor
                    FontFamily="Consolas"
                    Grid.Row="1"
                    Height="400"
                    HorizontalScrollBarVisibility="Auto"
                    MinHeight="400"
                    VerticalAlignment="Stretch"
                    VerticalScrollBarVisibility="Visible"
                    x:Name="NewEditor" />
            </Grid>
        </Border>
        <!--  Footer  -->
        <Grid
            ColumnDefinitions="Auto,*,Auto"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Grid.Row="3"
            Margin="0,8,0,0">
            <StackPanel
                Grid.Column="0"
                Orientation="Horizontal"
                Spacing="8">
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <Border
                        Background="#D6FFD6"
                        CornerRadius="2"
                        Height="14"
                        VerticalAlignment="Center"
                        Width="14" />
                    <TextBlock
                        Text="0 added"
                        VerticalAlignment="Center"
                        x:Name="PART_AddedLinesText" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <Border
                        Background="#FFD6D6"
                        CornerRadius="2"
                        Height="14"
                        VerticalAlignment="Center"
                        Width="14" />
                    <TextBlock
                        Text="0 removed"
                        VerticalAlignment="Center"
                        x:Name="PART_RemovedLinesText" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <Border
                        Background="#FFFFE0"
                        CornerRadius="2"
                        Height="14"
                        VerticalAlignment="Center"
                        Width="14" />
                    <TextBlock
                        Text="0 modified"
                        VerticalAlignment="Center"
                        x:Name="PART_ModifiedLinesText" />
                </StackPanel>
            </StackPanel>

            <TextBlock
                FontSize="10"
                Grid.Column="2"
                HorizontalAlignment="Right"
                Text="Diff Viewer â€” AzurePrOps" />
        </Grid>
    </Grid>
</UserControl>