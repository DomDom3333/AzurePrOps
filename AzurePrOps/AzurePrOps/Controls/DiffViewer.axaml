<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AzurePrOps.Controls.DiffViewer">
    <StackPanel>
        <TextBox x:Name="PART_SearchBox" Watermark="Search" Margin="0,0,0,4"/>
        <StackPanel Orientation="Horizontal" x:Name="PART_MetricsPanel" Margin="0,0,0,4"/>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="PART_ContentPanel"/>
        </ScrollViewer>
    </StackPanel>
</UserControl>
