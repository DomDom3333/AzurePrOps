<Window
    Height="900"
    Title="Pull Request Review"
    Width="1400"
    WindowStartupLocation="CenterScreen"
    x:Class="AzurePrOps.Views.PullRequestDetailsWindow"
    x:DataType="vm:PullRequestDetailsWindowViewModel"
    x:Name="Root"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="using:AzurePrOps.Controls"
    xmlns:converters="using:AzurePrOps.Converters"
    xmlns:md="clr-namespace:Markdown.Avalonia;assembly=Markdown.Avalonia"
    xmlns:model="using:AzurePrOps.AzureConnection.Models"
    xmlns:review="using:AzurePrOps.ReviewLogic.Models"
    xmlns:vm="using:AzurePrOps.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">



    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="{Binding OverviewHeight}" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header Section  -->
        <Border
            Background="{DynamicResource SurfaceBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,0,1"
            Grid.Row="0"
            Padding="24,20">
            <Grid ColumnDefinitions="*,Auto">
                <!--  PR Info  -->
                <StackPanel Grid.Column="0" Spacing="12">
                    <TextBlock
                        FontSize="24"
                        FontWeight="Bold"
                        Text="{Binding PullRequest.Title}"
                        TextWrapping="Wrap" />

                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <Ellipse
                                Fill="{StaticResource PrimaryBrush}"
                                Height="20"
                                Width="20" />
                            <TextBlock
                                FontWeight="SemiBold"
                                Text="{Binding PullRequest.Creator}"
                                VerticalAlignment="Center" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock
                                FontSize="14"
                                Text="📅"
                                VerticalAlignment="Center" />
                            <TextBlock
                                Foreground="{StaticResource MutedBrush}"
                                Text="{Binding PullRequest.Created}"
                                VerticalAlignment="Center" />
                        </StackPanel>

                        <Border
                            Background="{Binding PullRequest.Status, Converter={StaticResource StatusToBrush}}"
                            CornerRadius="4"
                            Padding="8,4">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock
                                    FontSize="12"
                                    Foreground="White"
                                    Text="{Binding PullRequest.Status, Converter={StaticResource StatusToIcon}}" />
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="White"
                                    Text="{Binding PullRequest.Status}" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!--  Branch Info  -->
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border
                            Background="{StaticResource HoverBrush}"
                            CornerRadius="4"
                            Padding="8,4">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock FontSize="12" Text="🌿" />
                                <TextBlock
                                    FontFamily="JetBrains Mono, Consolas, monospace"
                                    FontSize="12"
                                    Text="{Binding PullRequest.SourceBranch}" />
                            </StackPanel>
                        </Border>
                        <TextBlock
                            FontSize="16"
                            Foreground="{StaticResource MutedBrush}"
                            Text="→"
                            VerticalAlignment="Center" />
                        <Border
                            Background="{StaticResource HoverBrush}"
                            CornerRadius="4"
                            Padding="8,4">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock FontSize="12" Text="🎯" />
                                <TextBlock
                                    FontFamily="JetBrains Mono, Consolas, monospace"
                                    FontSize="12"
                                    Text="{Binding PullRequest.TargetBranch}" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!--  Actions  -->
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="12">
                    <Button
                        Classes="SecondaryButton"
                        Command="{Binding ToggleSidebarCommand}"
                        Content="📖 Focus Mode"
                        ToolTip.Tip="Toggle sidebar visibility to maximize diff viewer space" />
                    <Button
                        Classes="SecondaryButton"
                        Command="{Binding ToggleOverviewCommand}"
                        Content="📊 Overview"
                        ToolTip.Tip="Toggle overview metrics to maximize diff viewer space" />
                    <Button
                        Classes="SecondaryButton"
                        Command="{Binding ShowCommentsCommand}"
                        Content="💬 Comments"
                        ToolTip.Tip="View Comments" />
                    <Button
                        Classes="SecondaryButton"
                        Command="{Binding ShowInsightsCommand}"
                        Content="📊 Insights"
                        ToolTip.Tip="View Analytics" />
                    <Button
                        Classes="SecondaryButton"
                        Command="{Binding CompleteCommand}"
                        Content="Complete" />
                    <Button
                        Classes="DangerButton"
                        Command="{Binding AbandonCommand}"
                        Content="Abandon" />
                    <Button
                        Classes="PrimaryButton"
                        Command="{Binding OpenInBrowserCommand}"
                        Content="🌐 Open in Browser" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Total Metrics Overview  -->
        <Border
            Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="0,0,0,1"
            Grid.Row="1"
            IsVisible="{Binding IsOverviewVisible}"
            Padding="24,16">
            <StackPanel Spacing="12">
                <TextBlock
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="📊 Review Overview" />
                <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*">
                    <!--  Wrap cards in two rows for better display  -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Border
                        Classes="Card"
                        Grid.Column="0"
                        Margin="0,0,8,0"
                        Padding="16,12"
                        ToolTip.Tip="Total number of files modified in this pull request. Includes additions, deletions, and modifications.">
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="{StaticResource PrimaryBrush}"
                                HorizontalAlignment="Center"
                                Text="{Binding FilesChanged}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource MutedBrush}"
                                HorizontalAlignment="Center"
                                Text="Files Changed" />
                        </StackPanel>
                    </Border>
                    <Border
                        Classes="Card"
                        Grid.Column="1"
                        Margin="8,0,8,0"
                        Padding="16,12"
                        ToolTip.Tip="Total number of comments and discussions on this pull request. Higher numbers may indicate more complex or controversial changes.">
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="{StaticResource PrimaryBrush}"
                                HorizontalAlignment="Center"
                                Text="{Binding TotalComments}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource MutedBrush}"
                                HorizontalAlignment="Center"
                                Text="Comments" />
                        </StackPanel>
                    </Border>
                    <Border
                        Classes="Card"
                        Grid.Column="2"
                        Margin="8,0,8,0"
                        Padding="16,12"
                        ToolTip.Tip="Number of new lines of code added. Large additions may require more careful review to ensure quality and consistency.">
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="{StaticResource SuccessBrush}"
                                HorizontalAlignment="Center"
                                Text="{Binding LinesAdded}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource MutedBrush}"
                                HorizontalAlignment="Center"
                                Text="Lines Added" />
                        </StackPanel>
                    </Border>
                    <Border
                        Classes="Card"
                        Grid.Column="3"
                        Margin="8,0,8,0"
                        Padding="16,12"
                        ToolTip.Tip="Number of lines of code removed or deleted. High deletion counts may indicate refactoring or cleanup efforts.">
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="{StaticResource DangerBrush}"
                                HorizontalAlignment="Center"
                                Text="{Binding LinesRemoved}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource MutedBrush}"
                                HorizontalAlignment="Center"
                                Text="Lines Removed" />
                        </StackPanel>
                    </Border>
                    <Border
                        Classes="Card"
                        Grid.Column="4"
                        Margin="8,0,8,0"
                        Padding="16,12"
                        ToolTip.Tip="Potential code quality issues detected, such as TODO comments, debug statements, or warnings. Lower is better.">
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="{StaticResource WarningBrush}"
                                HorizontalAlignment="Center"
                                Text="{Binding LintWarnings}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource MutedBrush}"
                                HorizontalAlignment="Center"
                                Text="Lint Warnings" />
                        </StackPanel>
                    </Border>
                    <Border
                        Classes="Card"
                        Grid.Column="5"
                        Margin="8,0,0,0"
                        Padding="16,12"
                        ToolTip.Tip="Estimated time needed to review this pull request based on change complexity, file types, and size. Accounts for test files and bulk changes.">
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="{StaticResource PrimaryBrush}"
                                HorizontalAlignment="Center"
                                Text="{Binding ReviewTimeMin, StringFormat={}{0:F1} min}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource MutedBrush}"
                                HorizontalAlignment="Center"
                                Text="Review Time" />
                        </StackPanel>
                    </Border>
                    <!--  Second Row of Metrics  -->
                    <Border
                        Classes="Card"
                        Grid.Column="0"
                        Grid.Row="1"
                        Margin="0,8,8,0"
                        Padding="16,12"
                        ToolTip.Tip="Potential security vulnerabilities detected in code changes, such as hardcoded secrets, unsafe operations, or SQL injection risks. Zero is ideal.">
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="{StaticResource DangerBrush}"
                                HorizontalAlignment="Center"
                                Text="{Binding SecurityRisks}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource MutedBrush}"
                                HorizontalAlignment="Center"
                                Text="Security Risks" />
                        </StackPanel>
                    </Border>
                    <Border
                        Classes="Card"
                        Grid.Column="1"
                        Grid.Row="1"
                        Margin="8,8,8,0"
                        Padding="16,12"
                        ToolTip.Tip="Code complexity score (0-100) based on control structures, nesting depth, and logic density. Higher scores indicate more complex code that may need extra review attention.">
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="{StaticResource WarningBrush}"
                                HorizontalAlignment="Center"
                                Text="{Binding CodeComplexity}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource MutedBrush}"
                                HorizontalAlignment="Center"
                                Text="Complexity Score" />
                        </StackPanel>
                    </Border>
                    <Border
                        Classes="Card"
                        Grid.Column="2"
                        Grid.Row="1"
                        Margin="8,8,0,0"
                        Padding="16,12"
                        ToolTip.Tip="Percentage of code changes that are test-related. Higher test coverage indicates better quality assurance and easier maintenance.">
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="{StaticResource SuccessBrush}"
                                HorizontalAlignment="Center"
                                Text="{Binding TestCoverage, StringFormat={}{0}%}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{StaticResource MutedBrush}"
                                HorizontalAlignment="Center"
                                Text="Test Coverage" />
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>

        <!--  Main Content  -->
        <Grid Grid.Row="2" Margin="24,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding SidebarWidth}" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Sidebar  -->
            <ScrollViewer
                Grid.Column="0"
                IsVisible="{Binding IsSidebarVisible}"
                Margin="0,0,16,0"
                VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="16">

                    <!--  Reviewers Card  -->
                    <Border Classes="Card">
                        <StackPanel Spacing="12">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="👥 Reviewers" />
                            <ItemsControl ItemsSource="{Binding PullRequest.Reviewers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="model:ReviewerInfo">
                                        <Border
                                            Background="{StaticResource CardBackgroundBrush}"
                                            CornerRadius="6"
                                            Margin="0,0,0,6"
                                            Padding="12,8">
                                            <Grid ColumnDefinitions="Auto,*,Auto">
                                                <Ellipse
                                                    Fill="{StaticResource PrimaryBrush}"
                                                    Grid.Column="0"
                                                    Height="24"
                                                    Width="24" />
                                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                    <TextBlock
                                                        FontSize="13"
                                                        FontWeight="SemiBold"
                                                        Text="{Binding DisplayName}" />
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="{StaticResource MutedBrush}"
                                                        Text="{Binding Vote}" />
                                                </StackPanel>
                                                <TextBlock
                                                    FontSize="16"
                                                    Grid.Column="2"
                                                    Text="{Binding Vote, Converter={StaticResource VoteToIcon}}"
                                                    VerticalAlignment="Center" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!--  Comments Summary  -->
                    <Border Classes="Card">
                        <StackPanel Spacing="12">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="💬 Recent Comments" />
                            <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Comments}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="model:PullRequestComment">
                                            <Border
                                                Background="{StaticResource CardBackgroundBrush}"
                                                CornerRadius="6"
                                                Margin="0,0,0,8"
                                                Padding="10,8">
                                                <StackPanel Spacing="4">
                                                    <Grid ColumnDefinitions="*,Auto">
                                                        <TextBlock
                                                            FontSize="12"
                                                            FontWeight="SemiBold"
                                                            Grid.Column="0"
                                                            Text="{Binding Author}" />
                                                        <TextBlock
                                                            FontSize="10"
                                                            Foreground="{StaticResource MutedBrush}"
                                                            Grid.Column="1"
                                                            Text="{Binding PostedDate}" />
                                                    </Grid>
                                                    <md:MarkdownScrollViewer Markdown="{Binding Content}" MaxHeight="60" />
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                    <!--  Add Comment  -->
                    <Border Classes="Card">
                        <StackPanel Spacing="12">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Add Comment" />
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBox
                                    Text="{Binding NewCommentText}"
                                    Watermark="Enter your comment..."
                                    Width="200" />
                                <Button
                                    Classes="PrimaryButton"
                                    Command="{Binding PostCommentCommand}"
                                    Content="Post" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Comment Threads  -->
                    <Border Classes="Card">
                        <StackPanel Spacing="12">
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="8"
                                VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Text="🧵 Threads" />
                                <CheckBox Content="Unresolved only" IsChecked="{Binding ShowUnresolvedOnly}" />
                            </StackPanel>
                            <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <ListBox ItemsSource="{Binding FilteredThreads}" SelectionChanged="ThreadSelectionChanged">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate x:DataType="review:CommentThread">
                                                <StackPanel Spacing="2">
                                                    <TextBlock
                                                        FontSize="12"
                                                        FontWeight="SemiBold"
                                                        Text="{Binding FilePath}" />
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="{StaticResource MutedBrush}"
                                                        Text="{Binding LineNumber, StringFormat=Line {0}}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <TextBlock
                                        FontStyle="Italic"
                                        Foreground="{StaticResource MutedBrush}"
                                        HorizontalAlignment="Center"
                                        IsVisible="{Binding FilteredThreadsCount, Converter={StaticResource NumberEqualsZeroConverter}}"
                                        Text="No threads found"
                                        VerticalAlignment="Center" />
                                </Grid>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                    <!--  File Tree  -->
                    <Border Classes="Card">
                        <StackPanel Spacing="12">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="📁 Changed Files" />
                            <ItemsControl ItemsSource="{Binding FileDiffs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="review:FileDiff">
                                        <Border
                                            Background="{StaticResource SurfaceBrush}"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            Margin="0,0,0,4"
                                            Padding="8,6">
                                            <Grid ColumnDefinitions="Auto,*">
                                                <TextBlock
                                                    FontSize="12"
                                                    Grid.Column="0"
                                                    Text="📄"
                                                    VerticalAlignment="Center" />
                                                <TextBlock
                                                    FontFamily="JetBrains Mono, Consolas, monospace"
                                                    FontSize="11"
                                                    Grid.Column="1"
                                                    Margin="6,0,0,0"
                                                    Text="{Binding FilePath}"
                                                    TextTrimming="CharacterEllipsis"
                                                    VerticalAlignment="Center" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!--  Diff Viewer Area  -->
            <Border
                Classes="Card"
                Grid.Column="1"
                Padding="0">
                <Grid RowDefinitions="Auto,*">

                    <!--  Tab Bar for Files  -->
                    <Border
                        Background="{StaticResource CardBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        CornerRadius="8,8,0,0"
                        Grid.Row="0"
                        Padding="16,12">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel
                                Grid.Column="0"
                                Orientation="Horizontal"
                                Spacing="8">
                                <TextBlock
                                    FontSize="14"
                                    Text="📄"
                                    VerticalAlignment="Center" />
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Text="File Changes"
                                    VerticalAlignment="Center" />
                                <Border
                                    Background="{StaticResource PrimaryBrush}"
                                    CornerRadius="10"
                                    Padding="6,2"
                                    VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="11"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="{Binding FileDiffs.Count}"
                                        VerticalAlignment="Center" />
                                </Border>
                            </StackPanel>

                            <StackPanel
                                Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="8">
                                <Button
                                    Classes="SecondaryButton"
                                    Command="{Binding OpenDiffSettingsCommand}"
                                    Content="⚙️ Settings"
                                    ToolTip.Tip="Diff Settings" />
                                <Button
                                    Classes="SecondaryButton"
                                    Command="{Binding RefreshDiffsCommand}"
                                    Content="🔄 Refresh"
                                    ToolTip.Tip="Refresh Diff" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--  File Diffs  -->
                    <ScrollViewer
                        Background="{StaticResource BackgroundBrush}"
                        Grid.Row="1"
                        Padding="0"
                        VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding FileDiffs}" Margin="0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="review:FileDiff">
                                    <Border
                                        Background="{StaticResource SurfaceBrush}"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                        Margin="0">

                                        <Expander
                                            Background="{StaticResource SurfaceBrush}"
                                            Expanding="Expander_Expanding"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Stretch">

                                            <!--  File Header  -->
                                            <Expander.Header>
                                                <Border Padding="16,12">
                                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                                        <StackPanel
                                                            Grid.Column="0"
                                                            Orientation="Horizontal"
                                                            Spacing="8">
                                                            <TextBlock
                                                                FontSize="14"
                                                                Text="📄"
                                                                VerticalAlignment="Center" />
                                                            <TextBlock
                                                                FontFamily="JetBrains Mono, Consolas, monospace"
                                                                FontSize="13"
                                                                FontWeight="SemiBold"
                                                                Foreground="{StaticResource TextPrimaryBrush}"
                                                                Text="{Binding FilePath}"
                                                                VerticalAlignment="Center" />
                                                        </StackPanel>

                                                        <StackPanel
                                                            Grid.Column="2"
                                                            Orientation="Horizontal"
                                                            Spacing="12">
                                                            <!--  File stats would go here  -->
                                                            <Button
                                                                Classes="SecondaryButton"
                                                                Click="ViewInIDE_Click"
                                                                Content="View in IDE"
                                                                FontSize="11"
                                                                PointerPressed="ViewInIDE_PointerPressed"
                                                                VerticalAlignment="Center" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </Expander.Header>

                                            <!--  Diff Content - Lazy loaded only when expanded  -->
                                            <Border
                                                Background="{StaticResource SurfaceBrush}"
                                                MinHeight="100"
                                                Name="DiffContainer"
                                                Padding="0">
                                                <!--  DiffViewer will be added programmatically when expanded  -->
                                                <TextBlock
                                                    FontStyle="Italic"
                                                    Foreground="{StaticResource MutedBrush}"
                                                    HorizontalAlignment="Center"
                                                    Text="Click to expand and view diff..."
                                                    VerticalAlignment="Center" />
                                            </Border>

                                        </Expander>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                </Grid>
            </Border>

        </Grid>

        <!--  Loading Overlay  -->
        <Border
            Background="{DynamicResource OverlayBackgroundBrush}"
            Grid.RowSpan="3"
            IsVisible="{Binding IsLoading}"
            ZIndex="999">
            <Border
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                HorizontalAlignment="Center"
                Padding="30"
                VerticalAlignment="Center">
                <StackPanel Spacing="16">
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"
                        Text="Loading Pull Request..." />
                    <ProgressBar
                        Height="6"
                        IsIndeterminate="{Binding LoadingProgress, Converter={x:Static ObjectConverters.IsNull}}"
                        Maximum="100"
                        MinWidth="300"
                        Value="{Binding LoadingProgress}" />
                    <TextBlock
                        FontSize="14"
                        Foreground="{StaticResource MutedBrush}"
                        HorizontalAlignment="Center"
                        Text="{Binding LoadingStatus}" />
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
