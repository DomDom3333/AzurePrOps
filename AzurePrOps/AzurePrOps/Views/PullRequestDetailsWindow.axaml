<Window
    Height="900"
    Title="Pull Request Review"
    Width="1400"
    WindowStartupLocation="CenterScreen"
    x:Class="AzurePrOps.Views.PullRequestDetailsWindow"
    x:DataType="vm:PullRequestDetailsWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="using:AzurePrOps.Controls"
    xmlns:converters="using:AzurePrOps.Converters"
    xmlns:model="using:AzurePrOps.AzureConnection.Models"
    xmlns:review="using:AzurePrOps.ReviewLogic.Models"
    xmlns:vm="using:AzurePrOps.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">



    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header Section  -->
        <Border
            Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="0,0,0,1"
            Grid.Row="0"
            Padding="24,20">
            <Grid ColumnDefinitions="*,Auto">
                <!--  PR Info  -->
                <StackPanel Grid.Column="0" Spacing="12">
                    <TextBlock
                        FontSize="24"
                        FontWeight="Bold"
                        Text="{Binding PullRequest.Title}"
                        TextWrapping="Wrap" />

                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <Ellipse
                                Fill="{StaticResource PrimaryBrush}"
                                Height="20"
                                Width="20" />
                            <TextBlock
                                FontWeight="SemiBold"
                                Text="{Binding PullRequest.Creator}"
                                VerticalAlignment="Center" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock
                                FontSize="14"
                                Text="ðŸ“…"
                                VerticalAlignment="Center" />
                            <TextBlock
                                Foreground="{StaticResource MutedBrush}"
                                Text="{Binding PullRequest.Created}"
                                VerticalAlignment="Center" />
                        </StackPanel>

                        <Border
                            Background="{Binding PullRequest.Status, Converter={StaticResource StatusToBrush}}"
                            CornerRadius="4"
                            Padding="8,4">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock
                                    FontSize="12"
                                    Foreground="White"
                                    Text="{Binding PullRequest.Status, Converter={StaticResource StatusToIcon}}" />
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="White"
                                    Text="{Binding PullRequest.Status}" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!--  Branch Info  -->
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border
                            Background="{StaticResource HoverBrush}"
                            CornerRadius="4"
                            Padding="8,4">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock FontSize="12" Text="ðŸŒ¿" />
                                <TextBlock
                                    FontFamily="JetBrains Mono, Consolas, monospace"
                                    FontSize="12"
                                    Text="{Binding PullRequest.SourceBranch}" />
                            </StackPanel>
                        </Border>
                        <TextBlock
                            FontSize="16"
                            Foreground="{StaticResource MutedBrush}"
                            Text="â†’"
                            VerticalAlignment="Center" />
                        <Border
                            Background="{StaticResource HoverBrush}"
                            CornerRadius="4"
                            Padding="8,4">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock FontSize="12" Text="ðŸŽ¯" />
                                <TextBlock
                                    FontFamily="JetBrains Mono, Consolas, monospace"
                                    FontSize="12"
                                    Text="{Binding PullRequest.TargetBranch}" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!--  Actions  -->
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="12">
                    <Button
                        Classes="SecondaryButton"
                        Content="ðŸ’¬ Comments"
                        ToolTip.Tip="View Comments" />
                    <Button
                        Classes="SecondaryButton"
                        Content="ðŸ“Š Insights"
                        Command="{Binding ShowInsightsCommand}"
                        ToolTip.Tip="View Analytics" />
                    <Button
                        Classes="PrimaryButton"
                        Command="{Binding OpenInBrowserCommand}"
                        Content="ðŸŒ Open in Browser"
                        IsEnabled="{Binding PullRequest.WebUrl, Converter={StaticResource StringNotEmptyConverter}}" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Main Content  -->
        <Grid
            ColumnDefinitions="300,*"
            Grid.Row="1"
            Margin="24,20">

            <!--  Sidebar  -->
            <ScrollViewer
                Grid.Column="0"
                Margin="0,0,16,0"
                VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="16">

                    <!--  Reviewers Card  -->
                    <Border Classes="Card">
                        <StackPanel Spacing="12">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="ðŸ‘¥ Reviewers" />
                            <ItemsControl ItemsSource="{Binding PullRequest.Reviewers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="model:ReviewerInfo">
                                        <Border
                                            Background="{StaticResource CardBackgroundBrush}"
                                            CornerRadius="6"
                                            Margin="0,0,0,6"
                                            Padding="12,8">
                                            <Grid ColumnDefinitions="Auto,*,Auto">
                                                <Ellipse
                                                    Fill="{StaticResource PrimaryBrush}"
                                                    Grid.Column="0"
                                                    Height="24"
                                                    Width="24" />
                                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                    <TextBlock
                                                        FontSize="13"
                                                        FontWeight="SemiBold"
                                                        Text="{Binding DisplayName}" />
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="{StaticResource MutedBrush}"
                                                        Text="{Binding Vote}" />
                                                </StackPanel>
                                                <TextBlock
                                                    FontSize="16"
                                                    Grid.Column="2"
                                                    Text="{Binding Vote, Converter={StaticResource VoteToIcon}}"
                                                    VerticalAlignment="Center" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!--  Comments Summary  -->
                    <Border Classes="Card">
                        <StackPanel Spacing="12">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="ðŸ’¬ Recent Comments" />
                            <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Comments}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="model:PullRequestComment">
                                            <Border
                                                Background="{StaticResource CardBackgroundBrush}"
                                                CornerRadius="6"
                                                Margin="0,0,0,8"
                                                Padding="10,8">
                                                <StackPanel Spacing="4">
                                                    <Grid ColumnDefinitions="*,Auto">
                                                        <TextBlock
                                                            FontSize="12"
                                                            FontWeight="SemiBold"
                                                            Grid.Column="0"
                                                            Text="{Binding Author}" />
                                                        <TextBlock
                                                            FontSize="10"
                                                            Foreground="{StaticResource MutedBrush}"
                                                            Grid.Column="1"
                                                            Text="{Binding PostedDate}" />
                                                    </Grid>
                                                    <TextBlock
                                                        FontSize="12"
                                                        MaxLines="3"
                                                        Text="{Binding Content}"
                                                        TextWrapping="Wrap" />
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                    <!--  File Tree  -->
                    <Border Classes="Card">
                        <StackPanel Spacing="12">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="ðŸ“ Changed Files" />
                            <ItemsControl ItemsSource="{Binding FileDiffs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="review:FileDiff">
                                        <Border
                                            Background="{StaticResource SurfaceBrush}"
                                            CornerRadius="4"
                                            Cursor="Hand"
                                            Margin="0,0,0,4"
                                            Padding="8,6">
                                            <Grid ColumnDefinitions="Auto,*">
                                                <TextBlock
                                                    FontSize="12"
                                                    Grid.Column="0"
                                                    Text="ðŸ“„"
                                                    VerticalAlignment="Center" />
                                                <TextBlock
                                                    FontFamily="JetBrains Mono, Consolas, monospace"
                                                    FontSize="11"
                                                    Grid.Column="1"
                                                    Margin="6,0,0,0"
                                                    Text="{Binding FilePath}"
                                                    TextTrimming="CharacterEllipsis"
                                                    VerticalAlignment="Center" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!--  Diff Viewer Area  -->
            <Border
                Classes="Card"
                Grid.Column="1"
                Padding="0">
                <Grid RowDefinitions="Auto,*">

                    <!--  Tab Bar for Files  -->
                    <Border
                        Background="{StaticResource CardBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        CornerRadius="8,8,0,0"
                        Grid.Row="0"
                        Padding="16,12">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel
                                Grid.Column="0"
                                Orientation="Horizontal"
                                Spacing="8">
                                <TextBlock
                                    FontSize="14"
                                    Text="ðŸ“„"
                                    VerticalAlignment="Center" />
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Text="File Changes"
                                    VerticalAlignment="Center" />
                                <Border
                                    Background="{StaticResource PrimaryBrush}"
                                    CornerRadius="10"
                                    Padding="6,2">
                                    <TextBlock
                                        FontSize="11"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="{Binding FileDiffs.Count}" />
                                </Border>
                            </StackPanel>

                            <StackPanel
                                Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="8">
                                <Button
                                    Classes="SecondaryButton"
                                    Content="âš™ï¸ Settings"
                                    ToolTip.Tip="Diff Settings" />
                                <Button
                                    Classes="SecondaryButton"
                                    Content="ðŸ”„ Refresh"
                                    ToolTip.Tip="Refresh Diff" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--  File Diffs  -->
                    <ScrollViewer
                        Background="{StaticResource BackgroundBrush}"
                        Grid.Row="1"
                        Padding="0"
                        VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding FileDiffs}" Margin="0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="review:FileDiff">
                                    <Border
                                        Background="{StaticResource SurfaceBrush}"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                        Margin="0">

                                        <Expander
                                            Background="{StaticResource SurfaceBrush}"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Stretch"
                                            IsExpanded="True">

                                            <!--  File Header  -->
                                            <Expander.Header>
                                                <Border Padding="16,12">
                                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                                        <StackPanel
                                                            Grid.Column="0"
                                                            Orientation="Horizontal"
                                                            Spacing="8">
                                                            <TextBlock
                                                                FontSize="14"
                                                                Text="ï¿½ï¿½"
                                                                VerticalAlignment="Center" />
                                                            <TextBlock
                                                                FontFamily="JetBrains Mono, Consolas, monospace"
                                                                FontSize="13"
                                                                FontWeight="SemiBold"
                                                                Foreground="{StaticResource TextPrimaryBrush}"
                                                                Text="{Binding FilePath}"
                                                                VerticalAlignment="Center" />
                                                        </StackPanel>

                                                        <StackPanel
                                                            Grid.Column="2"
                                                            Orientation="Horizontal"
                                                            Spacing="12">
                                                            <!--  File stats would go here  -->
                                                            <TextBlock
                                                                Cursor="Hand"
                                                                FontSize="11"
                                                                Foreground="{StaticResource PrimaryBrush}"
                                                                Text="View in IDE"
                                                                VerticalAlignment="Center" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </Expander.Header>

                                            <!--  Diff Content  -->
                                            <Border
                                                Background="{StaticResource SurfaceBrush}"
                                                MinHeight="500"
                                                Padding="0">
                                                <controls:DiffViewer
                                                    HorizontalAlignment="Stretch"
                                                    NewText="{Binding NewText}"
                                                    OldText="{Binding OldText}"
                                                    VerticalAlignment="Stretch"
                                                    ViewMode="SideBySide" />
                                            </Border>

                                        </Expander>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                </Grid>
            </Border>

        </Grid>
    </Grid>
</Window>
