<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Styles.Resources>
        <!--  GitKraken-inspired colors  -->
        <Color x:Key="AccentColor">#31A8FF</Color>
        <SolidColorBrush Color="{DynamicResource AccentColor}" x:Key="AccentBrush" />

        <SolidColorBrush Color="#E3E3E3" x:Key="PrimaryBrush" />
        <SolidColorBrush Color="#2B3137" x:Key="CardBackgroundBrush" />
        <SolidColorBrush Color="#3C444C" x:Key="BorderBrush" />
        <SolidColorBrush Color="#FF5555" x:Key="ErrorBrush" />
    </Styles.Resources>

    <Style Selector="Window">
        <Setter Property="Background" Value="#1E2227" />
    </Style>

    <Style Selector="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
    </Style>

    <Style Selector="Button">
        <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="Button, TextBox, ComboBox, AutoCompleteBox">
        <Setter Property="Margin" Value="2" />
    </Style>
</Styles>
